menu "LoRaWAN"

config LORAWAN
	bool "LoraWAN support [Experimental]"
	select NEWLIB_LIBC
	help
	  This option enables LoRaWAN support.

if LORAWAN

source "subsys/lorawan/radio/Kconfig"
source "subsys/lorawan/class/Kconfig"

endif # LORAWAN

endmenu

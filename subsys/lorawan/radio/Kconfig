# Kconfig - Semtech radio chip selection
#
# Copyright (c) 2018 Ding Tao
#
# SPDX-License-Identifier: Apache-2.0
#

choice
	prompt "Radio chip selection"
	default SX1276
	help
	  Select the LoRaWAN chip to compile

config SX1272
	bool "Semtech SX1272"
	select SPI
	help
	  Use Semtech SX1272 as base radio

config SX1276
	bool "Semtech SX1276"
	select SPI
	help
	  Use Semetech SX1276 as base radio
endchoice

source "subsys/lorawan/radio/Kconfig.sx1272"
source "subsys/lorawan/radio/Kconfig.sx1276"
